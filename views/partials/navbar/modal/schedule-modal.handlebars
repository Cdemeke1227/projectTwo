<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="scheduleModalLabel">Sign Up for House of Styles</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
       <form method="post" action='' name="schedule_form">
            <div class="form-group">
                <label for="inputService">Service</label>
                <input type="service" class="form-control" id="inputService" placeholder="Hair Color">
            </div>
            <div class="form-group">
                <label for="inputStart">Start Time</label>
                <input type="Start" class="form-control" id="InputStart" aria-describedby="StartHelp" placeholder="Start Time">
            </div>
            <div class="form-group">
                <label for="inputEnd">End Time</label>
                <input type="End" class="form-control" id="inputEnd" placeholder="End Time">
            </div>
            <div class="form-group">
                <label for="InputRepeat">Repeat</label>
                <input type="repeat" class="form-control" id="inputRepeat" placeholder="Repeat">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

