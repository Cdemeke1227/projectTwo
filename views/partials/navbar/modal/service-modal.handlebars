<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="serviceModalLabel">Sign Up for House of Styles</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <form method="post" action='' name="service_form">
            <div class="form-group" id="providerPick">
                <!-- Select Stylist Dropdown -->
                <label for="providerChoices">Select Provider</label>
                <select id="providerChoices" class="form-control">
                    {{!-- {{#each provider_names}} --}}
                    <option selected> Select Provider</option>
                </select>
            </div>
            <div class="form-group">
                {{!-- category --}}
                <label for="inputService">Category</label>
                <input type="text" class="form-control" id="inputServiceCategory" placeholder="Cut">
                <input id="date" type="date">
            </div>
            <div class="form-group">
                {{!-- service name --}}
                <label for="inputStart">Service Name</label>
                <input type="text" class="form-control" id="InputServiceName" placeholder="Kids Cut and Style">
            </div>
            <div class="form-group">
                {{!-- description --}}
                <label for="inputEnd">Descripton</label>
                <input type="text" class="form-control" id="inputServiceDescription" placeholder="Kids Hair">
            </div>
            <div class="form-group">
                {{!-- duration --}}
                <label for="InputRepeat">Duration</label>
                <input type="text" class="form-control" id="inputServiceDuration" placeholder="00:30:00">
            </div>
            <div class="form-group">
                {{!-- price --}}
                <label for="InputRepeat">Price</label>
                <input type="text" class="form-control" id="inputServicePrice" placeholder="Repeat">
            </div>
            <div class="form-group">
                {{!-- photolinks --}}
                <label for="InputRepeat">Photolink</label>
                <input type="text" class="form-control" id="inputServicePhoto" placeholder="assets/images/services/cut_child.jpg">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

{{!-- name, description, duration, price, photolink(s) --}}